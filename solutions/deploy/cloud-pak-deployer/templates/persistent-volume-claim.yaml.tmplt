apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: ${cloud_pak_deployer_persistent_volume_claim_name}
  namespace: ${cloud_pak_deployer_namespace_name}
spec:
  accessModes:
    - ReadWriteOnce # https://www.ibm.com/docs/en/cp-security/1.10?topic=planning-storage-requirements
  resources:
    requests:
      storage: 10Gi
